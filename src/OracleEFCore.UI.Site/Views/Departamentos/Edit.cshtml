@model OracleEFCore.UI.Site.Models.Departamento
@{
    ViewData["Title"] = "Create";
}
<h1>Update</h1>
<br />
<form asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Nome">
    </div>
    <div class="form-group">
        <label>Local</label>
        <input asp-for="Local" class="form-control" placeholder="Local">
    </div>
    <div class="btn-toolbar text-right">
        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </div>
    
</form>

