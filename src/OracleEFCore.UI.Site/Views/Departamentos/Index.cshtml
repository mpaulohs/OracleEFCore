@model IEnumerable<OracleEFCore.UI.Site.Models.Departamento>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<a asp-action="Create" class="btn btn-success btn-lg">Criar Departamento</a>
<br /><br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Local</th>   
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Local</td>
                <td>
                    <a asp-action="Edit" asp-controller="Departamentos" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Delete" asp-controller="Departamentos" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>

        }



    </tbody>
</table>


